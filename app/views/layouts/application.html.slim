doctype html
html
  head
    title Store
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track'=> 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track'=> 'reload'
  body
    #page
      .header-container.hidden-xs.hidden-sm
        header#header
          .container
            .row
              .col-sm-4
                =image_tag 'logo_main.png'
              .col-sm-4
                ul#main_menu.nav.nav-pills
                  li.active
                    =link_to 'Каталог', catalog_index_url
                  li
                    =link_to 'Доставка', '#'
                  li
                    =link_to 'О нас', '#'
              .col-sm-4
                #cart_block_wrapper
                  #cart_block
                    #cart_block_summary.collapsed
                      span.cart_quantity
                        = @cart.line_items.sum(&:quantity)
                      span.cart_product_txt товаров в
                      =<link_to 'моей корзине', edit_cart_path(@cart.id), class: 'my_cart'
                      #free_delivery
                        span.delivery Бесплатная доставка от
                          <span class="delivery_from"> 4000 </span>
                          руб.
                        span.delivery_ok.hidden Доставим бесплатно!!!!
                    #cart_block_list
            nav#categories_block_top
              ul.nav.nav-tabs
                li#unbleached_calico.active
                  =link_to 'Бязь', action: 'index', b_material: 'unbleached_calico',  remote: true
                li#child
                  =link_to 'Детское',action: 'index', childs: true, b_material: 'unbleached_calico', remote: true
                li#poplin
                  =link_to 'Поплин', action: 'index',  b_material: 'poplin', remote: true
                li#satin
                  =link_to 'Сатин', action: 'index',  b_material: 'sateen', remote: true
      #mobile_nav.hidden-md.hidden-lg
      #space.clearfix
      .columns-container
        =yield
      .footer-container
        h1 footer
